<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Skybound Hunters Cipher Tool</title>
    <style>
        body { font-family: Arial, sans-serif; text-align: center; padding: 20px; }
        input, button { margin: 10px; padding: 10px; font-size: 16px; }
        textarea { width: 80%; height: 100px; font-size: 16px; }
    </style>
</head>
<body>

    <h2>Skybound Hunters Cipher Tool</h2>
    <textarea id="inputText" placeholder="Enter text to encrypt or decrypt..."></textarea><br>
    <button onclick="encryptText()">Encrypt</button>
    <button onclick="decryptText()">Decrypt</button>
    <h3>Result:</h3>
    <textarea id="outputText" readonly></textarea>

    <script>
        const cipherMap = {
            'A': 'X', 'B': 'U', 'C': 'R', 'D': 'O', 'E': 'L', 'F': 'I', 'G': 'F', 'H': 'C', 
            'I': 'Z', 'J': 'W', 'K': 'T', 'L': 'Q', 'M': 'N', 'N': 'K', 'O': 'H', 'P': 'E', 
            'Q': 'B', 'R': 'Y', 'S': 'V', 'T': 'S', 'U': 'P', 'V': 'M', 'W': 'J', 'X': 'G', 
            'Y': 'D', 'Z': 'A'
        };
        const decipherMap = Object.fromEntries(Object.entries(cipherMap).map(([key, value]) => [value, key]));

        function encryptText() {
            let input = document.getElementById("inputText").value.toUpperCase();
            let encrypted = input.split('').map(char => cipherMap[char] || char).join('');
            document.getElementById("outputText").value = encrypted;
        }

        function decryptText() {
            let input = document.getElementById("inputText").value.toUpperCase();
            let decrypted = input.split('').map(char => decipherMap[char] || char).join('');
            document.getElementById("outputText").value = decrypted;
        }
    </script>

</body>
</html>
